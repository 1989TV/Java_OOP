package OOP_Inheritence;

interface Shape{

	public double area();

	public double perimeter();
}

public class Cirlce implements Shape {
	double radius;
	
	Cirlce(double radius){
		this.radius = radius;
	}

	@Override
	public double area() {
		return Math.PI*radius*radius;
	}

	@Override
	public double perimeter() {
		return 2.0*Math.PI*radius;
	}

}
